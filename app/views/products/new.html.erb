<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div id="productResult">
  <h2 id="productTitle"></h2>
  <p id="productPrice"></p>
  <p id="productDescription"></p>
  <p id="productInventory"></p>
</div>


<script type="text/javascript" charset="utf-8">
// Shorthand for $( document ).ready()
$(function() {
  $('form').submit(function(event) {
    event.preventDefault();
    // alert("yeah");

    var params = $(this).serialize();
    $.post('/products', params).done(function(response) {
      console.log(response)
      $('#productTitle').text(response["name"]);
      $('#productPrice').text(response["price"]);
      $('#productDescription').text(response["description"]);
      $('#productInventory').text(response["inventory"]);
    });
  });

})
</script>