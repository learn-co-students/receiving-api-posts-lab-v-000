<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div id="productContainer">
  <h3 id="name"></h3>
  <p id="price"></p>
  <p id="description"></p>
  <p id="inventory"></p>
</div>

<script type="text/javascript" charset="utf-8">
  $(function () {
    $('form').submit(function(event) {
      event.preventDefault();
      let values = $(this).serialize();
      
      let product = $.post('/products', values);

      product.done(function(data) {
        $("#name").text(data["name"])
        $("#price").text(data["price"])
        $("#description").text(data["description"])
        $("#inventory").text(data["inventory"])
      })

    })
  })
</script>