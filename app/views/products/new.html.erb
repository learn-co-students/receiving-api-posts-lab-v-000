<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div id="product-info">
  <h1 id="product-name"></h1>
  <p id="product-desc"></p>
  <p id="product-price"></p>
  <p id="product-inv"></p>
</div>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $('form').submit(function(e) {
      e.preventDefault();
      var values = $(this).serialize();
      var postRequest = $.post('/products', values);

      postRequest.done(function(productData) {
        $('#product-name').text(productData['name']);
        $('#product-desc').text(productData['description']);
        $('#product-price').text(productData['price']);
        $('#product-inv').text(productData['inventory']);
      })
    })
  });
</script>
