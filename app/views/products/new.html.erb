<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<!-- <a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a> -->
<h1 class="productName">  </h1>
<p class="productInventory">  </p>
<p class="productPrice"> </p>
<p class="productDescription"> </p>


<script type="text/javascript" charset="utf-8">
  $(function () {
    $("form").submit(function(event) {
      event.preventDefault();
      var values = $(this).serialize();
      var posting = $.post("/products", values)

      posting.done(function(data) {
        $(".productName").text(data.product.name)
        $(".productInventory").text(data.product.inventory)
        $(".productPrice").text("$" + data.product.price)
        $(".productDescription").text(data.product.description)
      })
    })
  })
</script>