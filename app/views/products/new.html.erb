<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div id="newProduct">
  <div id="name">
  </div>
  <div id="price">
  </div>
  <div id="inventory">
  </div>
  <div id="description">
  </div>
</div>

<script type="text/javascript" charset="utf-8">
$(function(){
  $('form').submit(
    function(event){
      event.preventDefault();
      var values = $(this).serialize();

      var posting = $.post('/products', values);

      posting.done(function(data){
        var product = data;
        $("#name").text("Name: " + product["name"]);
        $("#price").text("Price: " + product["price"]);
        $("#inventory").text("Inventory: " + product["inventory"]);
        $("#description").text("Description: " + product["description"]);
      });
    });
});
</script>
