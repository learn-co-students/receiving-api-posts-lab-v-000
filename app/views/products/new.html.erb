<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<p id="productName"></p>
<p id="productPrice"></p>
<p id="productDescription"></p>
<p id="productInventory"></p>

<script type="text/javascript" charset="unicode-8">
  $(function() {
    $('form').submit(function(event) {
      event.preventDefault();
      var data = $(this).serialize();
      $.post('/products', data)
        .done(function(response) {
          $('#productName').text(response.name);
          $('#productPrice').text(response.price);
          $('#productDescription').text(response.description);
          $('#productInventory').text(response.inventory);
        })
    })
  })
</script>