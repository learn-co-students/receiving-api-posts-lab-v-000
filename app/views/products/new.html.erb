<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div>
  <h3 class="name"></h3>
  $<span class="price"></span>
  Inventory:<span class="inventory"></span>
  <p class="description"></p>
</div>

<script type="text/javascript" charset="urtf-8">
$(function(){

  $('form').submit(function(e){
    e.preventDefault();

    var values = $(this).serialize();

    $.post('/products', values).done(function(data){
      $(".name").text(data["name"])
      $(".price").text(data["price"])
      $(".description").text(data["description"])
      $(".inventory").text(data["inventory"])
    });
  });

});
</script>