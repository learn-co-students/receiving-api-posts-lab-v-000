<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>


<div>
  <h2 id="postName"></h2>
  <p id="postDetails"></p>
</div>


<script type="text/javascript">
  $(function(){
    $("form").submit(function(e){
      e.preventDefault();
      var values = $(this).serialize();
      var posting = $.post('/products', values);
      debugger;
      posting.done(function(data){
        var product = data;
        $("#postName").text(product["name"])
        $("#postDetails").text(product["price"]+product["description"]+product["inventory"])

      });
    });
  });
</script>
