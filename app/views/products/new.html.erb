<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div class="new-product">
  <p class="name"></p>
  <p class="description"></p>
  <p class="price"></p>
  <p class="inventory"></p>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('form').on('submit', function(e) {
      e.preventDefault();
      data = $(this).serialize();
      $.ajax({
        url: $(this).attr('action'),
        type: 'POST',
        data: data,
        dataType: 'json'
      })
      .done(function(resp) {
        // console.log(resp);
        $('.name').text(resp['name']);
        $('.description').text(resp['description']);
        $('.price').text(resp['price']);
        $('.inventory').text(resp['inventory']);
      });
    });
  });
</script>
